{
  "name": "endpoint-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "REACT_APP_DEV=true PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "tsc --noEmit && eslint src/**/*.ts{,x} --fix",
    "validate": "tsc --noEmit && eslint src/**/*.ts{,x} --max-warnings=0"
  },
  "dependencies": {
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@fontsource/roboto": "^4.5.1",
    "@mui/icons-material": "^5.1.0",
    "@mui/lab": "^5.0.0-alpha.71",
    "@mui/material": "^5.1.0",
    "@mui/styles": "^5.2.3",
    "@triply/yasgui": "^4.2.20",
    "notistack": "^2.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.1.2",
    "use-async-effect": "^2.2.5",
    "uuid": "^8.3.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^14.2.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "install": "^0.13.0",
    "node-sass": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "standard",
      "standard-jsx",
      "standard-react"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "only-warn"
    ],
    "rules": {
      "no-use-before-define": "off",
      "node/no-callback-literal": "off"
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
